@model NavbarViewModel
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SurveyApp.MVC</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                @if (Model.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="survey" asp-action="createsurvey">Anket Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="survey" asp-action="createdsurveys">Oluşturduğun Anketler</a>
                    </li>
                }
            </ul>
            @if (!Model.IsAuthenticated)
            {
                <a class="btn btn-primary" asp-action="login" asp-controller="auth">Giriş Yap</a>
            }
            else
            {
                <a class="btn btn-danger" asp-action="logout" asp-controller="auth">@($"{Model.UserName}(Çıkış)")</a>
            }
        </div>
    </div>
</nav>